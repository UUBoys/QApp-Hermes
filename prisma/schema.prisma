generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
  schemas      = ["qapp_hermes"]
}

model AvailableTickets {
  id        Int      @id @default(autoincrement())
  eventId   Int      @unique
  name      String
  quantity  Int
  cost      Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@schema("qapp_hermes")
}

model Credits {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  amount    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@schema("qapp_hermes")
}

model CreditHistory {
  id            Int      @id @default(autoincrement())
  userId        Int
  changedAmount String
  origin        String
  changedAt     DateTime @default(now())

  @@schema("qapp_hermes")
}
